<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FB">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                android:tint="#0B6E4F"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버스 정류장 선택"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0B6E4F"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8EAE3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:id="@+id/btnBus1"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="건국대(시외방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnBus2"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="건국대(시내방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnBus3"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="건국대후문(시외방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnBus4"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="건국대후문(시내방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnBus5"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="KU스테이션(충주역·터미널 방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnBus6"
            style="@style/BusBoxStyle">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_bus"
                android:tint="#0B6E4F"
                android:layout_marginEnd="12dp"/>

            <TextView
                style="@style/BusTextStyle"
                android:text="KU스테이션(건국대학교 후문·시내 방향)"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#0B6E4F"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
